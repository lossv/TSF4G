#!/bin/bash

INSTALL_PATH=/usr/local

usage()
{
	echo "-p install path"
	echo "-c clean"
	echo "-h help"
}

while getopts "p:ch" option 
do
	case "$option" in
	p)
		INSTALL_PATH=$OPTARG
		;;
	c)
		if [ -f tdserver.mk ];then
			rm tdserver.mk
			rm Makefile
		fi
		exit 0;
		;;
	h)
		Usage;
		exit 0;
		;;
	:|\?) 
		usage;
		exit 1;
		;;
	esac
done


sed 's#_INSTALL_PREFIX#'${INSTALL_PATH}'#g' tdserver.mk.tpl > tdserver.mk
cp Makefile.tpl Makefile

echo "INSTALL_PATH=${INSTALL_PATH}"
echo "succeed"
exit 0;
