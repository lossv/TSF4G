#!/bin/bash

TSERVER_INSTALL_PATH=/usr/local
TSERVER_ROOT_DIR=`pwd`

usage()
{
	echo "-p install path"
	echo "-h help"
}

while getopts "p:h" option 
do
	case "$option" in
	p)
		INSTALL_PATH=$OPTARG
		;;
	h)
		Usage;
		exit 0;
		;;
	:|\?) 
		usage;
		exit 1;
		;;
	esac
done


cp common.mk.tpl common.mk
sed -i 's#_TSERVER_INSTALL_PREFIX#'${TSERVER_INSTALL_PATH}'#g' common.mk
sed -i 's#_TSERVER_ROOT_DIR#'${TSERVER_ROOT_DIR}'#g' common.mk
if [ ! -d bin ];then
mkdir -p bin
fi

if [ ! -d lib ];then
mkdir -p lib/tbus
fi

echo "ROOT_DIR=${TSERVER_ROOT_DIR}"
echo "INSTALL_PATH=${TSERVER_INSTALL_PATH}"
echo "succeed"
exit 0;
